@page
@model dump.Pages.UniqueProp.CreateModel
@{
}

<div class="text-center">
    <h3>Unique Property</h3>
    <hr />
</div>
<div class="mb-3">
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</div>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="row">
        <div class="text-center border p-5">
            <h4>With EF Core</h4>
            <hr />
            <b><label asp-for="Detail.Name"></label></b>
            <input asp-for="Detail.Name" class="form-control" placeholder="" />
            <span asp-validation-for="Detail.Name" class="text-danger"></span>
            <br />
            <b><label asp-for="Detail.Role"></label></b>
            <input asp-for="Detail.Role" class="form-control" placeholder="Unique Role or NULL" />
            <span asp-validation-for="Detail.Role" class="text-danger"></span>
            <br>
            <b><label asp-for="Detail.Section"></label></b>
            <input asp-for="Detail.Section" class="form-control" placeholder="" />
            <span asp-validation-for="Detail.Section" class="text-danger"></span>
            <br />
            <b><label asp-for="Detail.Card"></label></b>
            <input asp-for="Detail.Card" class="form-control" placeholder=" Unique Number" />
            <span asp-validation-for="Detail.Card" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}